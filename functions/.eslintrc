{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "ecmaVersion": 6,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "vars-on-top": "warn",
    "arrow-body-style": "off",
    "no-underscore-dangle": "off",
    "arrow-parens": "off",
    "no-param-reassign": [2, { "props": false }]
  }
}
