{
  "name": "sbr-training",
  "version": "0.0.1",
  "description": "React + Firebase app to manage triathlon training",
  "repository": "https://github.com/brygrill/sbr-training.git",
  "author": "Bryan Grill",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.22.0",
    "codecov": "^2.1.0",
    "enzyme": "^2.8.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-class-property": "^1.0.3",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.44.0",
    "lint-staged": "^3.4.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.1",
    "react-addons-test-utils": "^15.5.1",
    "react-scripts": "^1.0.2",
    "react-test-renderer": "^15.5.4"
  },
  "dependencies": {
    "firebase": "^4.0.0",
    "google-libphonenumber": "^2.0.15",
    "lodash": "^4.17.4",
    "material-ui": "next",
    "material-ui-icons": "^1.0.0-alpha.19",
    "moment": "^2.18.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "react-responsive": "^1.2.10",
    "react-router-dom": "^4.1.1",
    "react-transition-group": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "scripts": {
    "flow": "flow",
    "format": "prettier --single-quote --trailing-comma all --write './src/**/*.js'",
    "lint-staged": "lint-staged",
    "gen": "zsh scripts/gen.sh",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "cov": "yarn run test -- --coverage",
    "rpt": "codecov -t $CODECOV",
    "deploy:dev": "yarn run build && zsh scripts/dev-deploy.sh",
    "deploy": "yarn run build && firebase deploy --only hosting",
    "functions": "firebase deploy --only functions"
  }
}
